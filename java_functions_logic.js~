function show_ans_3() {
	document.getElementById('answer_3').style.display = "block";
}


function check_ans_3(){
	var input = document.getElementById('input_ans_3');
	if (input.value==5050){
		document.getElementById('correct_3').style.display = "block";
        document.getElementById('incorrect_3').style.display = "none";	
		}	
	else{
		document.getElementById('incorrect_3').style.display = "block";	
        document.getElementById('correct_3').style.display = "none";	
		}
}
